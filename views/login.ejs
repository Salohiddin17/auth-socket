<%- include('parts/header') %> 

<% var error %>

<section class="vh-100 d-flex flex-column justify-content-center align-items-center registration">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-12">
                <div class="card text-center p-4">
                    <h1>Registration</h1>
                    <strong class="text-muted registration-slogan">
                        Socket.io
                    </strong>
                    <form class="mt-4" action="/login" method="POST">
                        <% if(error) {%>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>
                        <input type="tel" maxlength="998999999999" minlength="998330000000" name="tel" class="form-control my-3" placeholder="Ro'yxatdan o'tgan tel uchun" />
                        <button type="submit" class="btn btn-primary w-100">
                            Sign up
                        </button>
                    </form>
                    <!-- <a href="/kirish" class="mt-3 btn btn-outline-primary">Kirish</a> -->
                </div>
            </div>
        </div>
    </div>
</section>






<%- include('parts/footer') %> 